<!--              <dubbo:method name="sayHello" merger=".addAll"/>  -->
<!--      </dubbo:reference> -->

         <dubbo:service interface="com.example.dubbo.service.HelloService"
                   ref="helloServiceImpl" />
     <dubbo:reference id="helloService" interface="com.example.dubbo.service.HelloService" cluster="broadcast" scope="remote"/>
</beans>